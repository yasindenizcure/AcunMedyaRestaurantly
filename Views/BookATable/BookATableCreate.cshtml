@model AcunMedyaRestaurantly.Entities.BookATable
@{
    ViewBag.Title = "BookATableCreate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Anasayfa</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Masa Ayırma</a></li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Masa Ayırma Ekleme Formu</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <label>Ad</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

                            <label>Telefon</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })

                            <label>Okundu Mu</label>
                            @Html.TextBoxFor(x => x.IsRead, new { @class = "form-control" })

                            <label>Kişi Sayısı</label>
                            @Html.TextBoxFor(x => x.People, new { @class = "form-control" })

                            <label>Günün Tarihi</label>
                            @Html.TextBoxFor(x => x.SendDate, new { @class = "form-control" })

                            <label>Mesaj</label>
                            @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-dark gradient-2">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>